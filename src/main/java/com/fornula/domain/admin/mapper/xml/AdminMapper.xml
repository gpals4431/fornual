	-->
	
	<!-- 아이디로 찾기 -->
	<!--  
	<select id = "findId">
		select * from member 
		where id = #{id}
	</select>
	-->
		<!-- 01. 회원록록 -->
	<select id="memberList" resultType="com.fornula.domain.admin.dto.AdminMember" >
		select  member_idx,
				id,
				member_status,
				member_date
		from member
		order by member_idx
	</select>
	
	<!-- 상품 목록 -->
	
	<select id="itemList" resultType="com.fornula.domain.admin.dto.AdminItem" >
		select  item_idx,
				item_name,
				category_idx,
				item_date
		from item
		order by item_idx
		</select>
		
	<!-- 관리자 상품 수정(삭제 처리)-->
	<update id="updateItem" parameterType="com.fornula.domain.item.dto.Item">
		update item 
		set item_status=0
		where item_idx=#{itemIdx}
	</update>
	
	
	<!-- itemIdx 검색  -->
	<select id="selectItemIdx" resultType="com.fornula.domain.item.dto.Item">
		select item_idx 
		from item
	</select>
</mapper>
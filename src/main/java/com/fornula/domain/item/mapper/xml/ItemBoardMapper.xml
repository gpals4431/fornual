<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fornula.domain.item.mapper.xml.ItemInsertMapper">
	<!-- 상품 게시판에서 상품 리스트들을 뽑을 때 사용하는 SQL문 -->
	<!-- PHOTO,CATEGORY,EXPERT 테이블도 조인해서 작성해야 함 -->
	<select id="selectItemList" resultType="Item">
		select item_idx
			,category_idx
			,expert_idx
			,item_name
			,item_content
			,price
			,item_date
		from item
		where item_status=1
		order by item_idx	
	</select>
	
	<!-- 우리는 상품 올린다음 수정하는 기능은 따로 안만들었으니 관리자가 상품 게시글을 삭제처리(상품상태 컬럼값을 0으로 변경)할 때 사용할 SQL문 여기다가 작성해 민환아 -->
	<update id="updateItem">
		
	</update>
</mapper>
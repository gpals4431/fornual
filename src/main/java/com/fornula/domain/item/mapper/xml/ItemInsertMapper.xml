<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fornula.domain.item.mapper.xml.ItemInsertMapper">
	<!-- 상품 등록페이지에서 사용할 SQL문 -->
	<insert id="insertItem">
		<selectKey resultType="int" keyProperty="item_idx" order="BEFORE">
			select item_seq.nextval from dual
		</selectKey>
		insert into item values(#{itemIdx}
			,#{categoryIdx}
			,#{expertIdx}
			,#{itemName}
			,#{itemContent}
			,#{price}
			<!-- 등록완료 버튼을 클릭 시 item_status의 컬럼값이 1(존재)로 입력되도록 설정 -->
			,#{itemStatus}
			,SYSDATE
			,#{photoIdx})
	</insert>
	
	<!-- 
	근데 이거 필요없을듯?
	상품 등록페이지에서 상품 사진을 넣을 때 사용할 SQL문
	<insert id="insertPhoto">
		<selectKey resultType="int" keyProperty="photo_idx" order="BEFORE">
			select photo_seq.nextval from dual
		</selectKey>
		insert into photo values(#{photoIdx}
			,#{itemIdx}
			,#{itemfileName})
	</insert>
	 -->
</mapper>